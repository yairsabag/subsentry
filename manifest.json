{
  "manifest_version": 3,
  "name": "SubSentry - Subscription Protector",
  "version": "1.0",
  "description": "Detects and tracks your subscriptions automatically.",
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  }
}