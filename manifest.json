{
  "manifest_version": 3,
  "name": "SubSentry - Subscription Tracker",
  "version": "1.3",
  "description": "Track subscriptions and get trial expiration alerts.",
  "permissions": ["storage", "activeTab", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  }
}